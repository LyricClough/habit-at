<h1>Friends</h1>


<table>
    <tr>
        <th> My Friends</th><th></th>
    </tr>
    {{#each friends}}
    {{if this.sender == user.username}}
    <tr>
        <td>{{this.sender}}</td> <td><button class="btn btn-secondary mt-3">Remove friend</button></td>
    </tr>
    {{else}}
    <tr>
        <td>{{this.receiver}}</td> <td><button class="btn btn-secondary mt-3">Remove friend</button></td>
    </tr>
    {{/if}} 
    {{/each}}
</table>



<button class="btn btn-primary mt-3" onclick="sendFriendRequest()">Add friend</button>
<div class="modal fade" id="friendrequest" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div>
                <form id="data-form">
                    <div>
                        <label for="username" class="form-label">Username:</label>
                        <input type="text" class="form-control" id="username">
                    </div>
                    <button class="btn btn-primary" type="button" onclick="sendFriendRequest()">
                        Send Friend Request
                    </button>
                </form>
            </div>
        </div>

    </div>

</div>