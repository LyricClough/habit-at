<!doctype html>
<html lang="en">
  
  <head>
    <style>
      body {
        #font-family: inter;
        background-color: #f7f7f7;
      }
    </style>
  </head>

  <body style="padding: 15px;">

  <h4>
    {{#if username}}
    <b>Welcome back {{username}}!</b>
    {{else}}
    <b>Welcome back, User!</b>
    {{/if}}
    <br>
    <small id="date" class="text-body-secondary">Current Date</small>

    <script>
    // Create a new Date object
    const date = new Date();

    // Array of days of the week
    const daysOfWeek = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

    // Get the day of the week
    const dayOfWeek = daysOfWeek[date.getDay()];

    // Get the full date components
    const day = date.getDate();
    const month = date.toLocaleString('default', { month: 'long' }); // Full month name
    const year = date.getFullYear();

    // Format the full date
    const fullDate = `${dayOfWeek}, ${month} ${day}, ${year}`;

    document.getElementById('date').innerHTML = (fullDate);
    </script>
  </h4>

  <div style="display: flex; justify-content: space-between; align-items: center;">
    <div class="card" style="width: 100%; margin: 10px;">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">Completion</h6>
        <h5 class="card-title">33%</h5>
        <p class="card-subtitle mb-2 text-muted">^ Some more text</p>
      </div>
    </div>

    <div class="card" style="width: 100%; margin: 10px;">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">Friends</h6>
        <h5 class="card-title">2</h5>
        <p class="card-subtitle mb-2 text-muted">Some more text</p>
      </div>
    </div>

    <div class="card" style="width: 100%; margin: 10px;">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">Habits</h6>
        <h5 class="card-title">3</h5>
        <p class="card-subtitle mb-2 text-muted">Some more text</p>
      </div>
    </div>
  </div>
  
  <div style="padding-bottom: 10px; padding-top: 20px; display: flex; justify-content: space-between; align-items: center;">
    <h5>
      <b>Today's Habits</b>
    </h5>

    <button type="button" class="btn btn-dark">
      (+) New Habit
    </button>
  </div>
  

  <!--List of Habits-->

  <table class="table table-hover" style="border-radius: 10px">

    <tr>
      <td style="border-radius: 10px 10px 0 0">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Smoke a Cigarette</label><br>
          <small id="date" class="text-body-secondary">20 Minutes - Daily</small>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Brush My Teeth</label><br>
          <small id="date" class="text-body-secondary">4 Minutes - Daily</small>
        </div>
      </td>
    </tr>

    <tr>
      <td style="border-radius: 0px 0px 10px 10px">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Habit #3</label><br>
          <small id="date" class="text-body-secondary">Subtext</small>
        </div>
      </td>
    </tr>

  </table>

  </body>
</html>
