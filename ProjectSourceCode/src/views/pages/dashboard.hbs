<!-- src/views/pages/dashboard.hbs -->
<div class="space-y-6">

  <!-- HEADER -->
  <div>
    <h1 class="text-3xl font-bold">
      Welcome back, {{#if user.username}}{{user.username}}{{else}}User{{/if}}!
    </h1>
    <div class="mt-2 flex items-center">
      <p id="date" class="text-gray-600"></p>
      <span
        class="ml-4 inline-block bg-indigo-100 text-indigo-800 px-2 py-1 rounded-full text-sm font-medium">
        {{#if streak}}{{streak}} Day Streak{{else}}Day Streak{{/if}}
      </span>
    </div>
  </div>

  <!-- STATS GRID -->
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Completion -->
    <div class="bg-white rounded-lg shadow p-6 flex flex-col justify-between">
      <div class="flex items-center justify-between mb-4">
        <span class="text-gray-500">Completion</span>
        <span class="bg-blue-100 text-blue-800 p-2 rounded-full">
          <!-- poll icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 22V8h4v14M10 22V2h4v20M17 22v-8h4v8" />
          </svg>
        </span>
      </div>
      <p class="text-2xl font-bold">
        {{#if habits}}{{completionPerc}}%{{else}}N/A{{/if}}
      </p>
      <p class="mt-2 text-sm text-gray-500">
        + {{completedHabits.length}} completed today
      </p>
    </div>

    <!-- Habits -->
    <div class="bg-white rounded-lg shadow p-6 flex flex-col justify-between">
      <div class="flex items-center justify-between mb-4">
        <span class="text-gray-500">Habits</span>
        <span class="bg-green-100 text-green-800 p-2 rounded-full">
          <!-- pencil icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15.232 5.232l3.536 3.536M4 20h4l10-10-4-4L4 16v4z" />
          </svg>
        </span>
      </div>
      <p class="text-2xl font-bold">
        {{#if allHabits}}{{allHabits.length}}{{else}}0{{/if}}
      </p>
      <p class="mt-2 text-sm text-gray-500"><!-- e.g. "2 New This Month" --></p>
    </div>

    <!-- Longest Streak -->
    <div class="bg-white rounded-lg shadow p-6 flex flex-col justify-between group hover:shadow-md transition-all">
      <div class="flex items-center justify-between mb-4">
        <span class="text-gray-500">Longest Streak</span>
        <span class="bg-yellow-100 text-yellow-800 p-2 rounded-full">
          <!-- fire icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 2C8 8 6 12 12 22c6-10 4-14 0-20z" />
          </svg>
        </span>
      </div>
      <p class="text-2xl font-bold">{{longestStreak}} days</p>
      <a href="/statistics" class="mt-2 text-sm text-indigo-600 hover:text-indigo-800 group-hover:underline">View all streaks</a>
    </div>

    <!-- Stats Summary -->
    <div class="relative bg-gradient-to-br from-indigo-50 to-purple-50 rounded-lg shadow p-6 flex flex-col justify-between group hover:shadow-md transition-all cursor-pointer" onclick="window.location.href='/statistics'">
      <div class="flex items-center justify-between mb-4">
        <span class="text-gray-700 font-medium">Statistics</span>
        <span class="bg-indigo-100 text-indigo-800 p-2 rounded-full">
          <!-- chart icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </span>
      </div>
      <div class="flex space-x-2">
        <div class="text-sm flex-1">
          <div class="font-semibold">{{completionPerc}}%</div>
          <div class="text-xs text-gray-500">Rate</div>
        </div>
        <div class="text-sm flex-1">
          <div class="font-semibold">{{streak}}</div>
          <div class="text-xs text-gray-500">Streak</div>
        </div>
        <div class="text-sm flex-1">
          <div class="font-semibold">{{totalCompletions}}</div>
          <div class="text-xs text-gray-500">Total</div>
        </div>
      </div>
      <div class="absolute bottom-4 right-4">
        <span class="text-xs text-indigo-600 font-medium group-hover:underline flex items-center">
          View detailed stats
          <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </span>
      </div>
    </div>
  </div>

  <!-- TODAY'S HABITS HEADER -->
  <div class="flex items-center justify-between">
    <h2 class="text-xl font-semibold">Today's Habits</h2>
    <div class="flex space-x-2">
      <a href="/habits" class="flex items-center bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-50">
        View All Habits
      </a>
      <button onclick="location.href='/calendar'"
              class="flex items-center bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-500">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 4v16m8-8H4" />
        </svg>
        New Habit
      </button>
    </div>
  </div>

  <!-- HABITS TABLE -->
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 table-auto">
      <tbody class="bg-gray-50 divide-y divide-gray-200">

        {{#if habits}}
          {{#each incompleteHabits}}
            <tr>
              <td class="px-4 py-3 bg-white">
                <form action="/completedHabit" method="POST">
                  <input type="hidden" name="habitId" value="{{habit_id}}">
                  <input type="checkbox"
                         onChange="this.form.submit()"
                         class="h-5 w-5 text-indigo-600 border-gray-300 rounded"
                         {{#if (greaterThanZero counter)}}checked disabled{{/if}} />
                </form>
              </td>
              <td class="px-4 py-3 bg-white">
                <div class="flex items-center">
                  <div>
                    <p class="font-medium">{{habit_name}}</p>
                    <p class="text-sm text-gray-500">{{description}}, {{printTime time_slot}}</p>
                  </div>
                  <div class="ml-3">
                    <span class="inline-block px-2 py-1 rounded-full text-xs font-semibold
                      {{#if (equals status 0)}}bg-gray-100 text-gray-800{{/if}}
                      {{#if (equals status 1)}}bg-green-100 text-green-800{{/if}}
                      {{#if (equals status 2)}}bg-yellow-100 text-yellow-800{{/if}}
                      {{#if (equals status 3)}}bg-blue-100 text-blue-800{{/if}}">
                      {{#if (equals status 0)}}Inactive{{/if}}
                      {{#if (equals status 1)}}Active{{/if}}
                      {{#if (equals status 2)}}In Progress{{/if}}
                      {{#if (equals status 3)}}Complete{{/if}}
                    </span>
                  </div>
                </div>
              </td>
              <td class="px-4 py-3 bg-white text-right">
                <div class="flex items-center justify-end">
                  <div class="mr-4">
                    <div class="w-24 bg-gray-200 rounded-full h-2.5 mb-1">
                      <div class="bg-indigo-600 h-2.5 rounded-full" style="width: {{calculateProgress counter}}%"></div>
                    </div>
                    <span class="text-xs text-gray-500">{{counter}} completions</span>
                  </div>
                  <span class="inline-block bg-green-100 text-green-800 text-sm px-2 py-1 rounded-full font-semibold">
                    Progress
                  </span>
                </div>
              </td>
            </tr>
          {{/each}}

          {{#each completedHabits}}
            <tr>
              <td class="px-4 py-3 bg-white">
                <form action="/decrementHabit" method="POST">
                  <input type="hidden" name="habitId" value="{{habit_id}}">
                  <input type="checkbox"
                         onChange="this.form.submit()"
                         class="h-5 w-5 text-indigo-600 border-gray-300 rounded"
                         checked />
                </form>
              </td>
              <td class="px-4 py-3 bg-white">
                <div class="flex items-center">
                  <div>
                    <p class="font-medium line-through">{{habit_name}}</p>
                    <p class="text-sm text-gray-500">{{description}}, {{printTime time_slot}}</p>
                  </div>
                  <div class="ml-3">
                    <span class="inline-block px-2 py-1 rounded-full text-xs font-semibold
                      {{#if (equals status 0)}}bg-gray-100 text-gray-800{{/if}}
                      {{#if (equals status 1)}}bg-green-100 text-green-800{{/if}}
                      {{#if (equals status 2)}}bg-yellow-100 text-yellow-800{{/if}}
                      {{#if (equals status 3)}}bg-blue-100 text-blue-800{{/if}}">
                      {{#if (equals status 0)}}Inactive{{/if}}
                      {{#if (equals status 1)}}Active{{/if}}
                      {{#if (equals status 2)}}In Progress{{/if}}
                      {{#if (equals status 3)}}Complete{{/if}}
                    </span>
                  </div>
                </div>
              </td>
              <td class="px-4 py-3 bg-white text-right">
                <div class="flex items-center justify-end">
                  <div class="mr-4">
                    <div class="w-24 bg-gray-200 rounded-full h-2.5 mb-1">
                      <div class="bg-indigo-600 h-2.5 rounded-full" style="width: {{calculateProgress counter}}%"></div>
                    </div>
                    <span class="text-xs text-gray-500">{{counter}} completions</span>
                  </div>
                  <span class="inline-block bg-blue-100 text-blue-800 text-sm px-2 py-1 rounded-full font-semibold">
                    Done Today
                  </span>
                </div>
              </td>
            </tr>
          {{/each}}

        {{else}}
          <tr>
            <td colspan="3" class="py-8 text-center text-gray-500 italic">
              You have no habits today!
            </td>
          </tr>
        {{/if}}

      </tbody>
    </table>
  </div>

  <!-- WEEKLY PROGRESS SUMMARY -->
  <div class="mt-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold">Weekly Progress</h2>
      <a href="/statistics" class="text-sm text-indigo-600 hover:text-indigo-800 flex items-center">
        View detailed statistics
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex flex-wrap gap-3 mb-6">
        {{#each weeklyData}}
          <div class="text-center">
            {{#if (equals @index 0)}}
              <div class="text-xs font-medium text-gray-500 mb-1">Sun</div>
            {{else if (equals @index 1)}}
              <div class="text-xs font-medium text-gray-500 mb-1">Mon</div>
            {{else if (equals @index 2)}}
              <div class="text-xs font-medium text-gray-500 mb-1">Tue</div>
            {{else if (equals @index 3)}}
              <div class="text-xs font-medium text-gray-500 mb-1">Wed</div>
            {{else if (equals @index 4)}}
              <div class="text-xs font-medium text-gray-500 mb-1">Thu</div>
            {{else if (equals @index 5)}}
              <div class="text-xs font-medium text-gray-500 mb-1">Fri</div>
            {{else}}
              <div class="text-xs font-medium text-gray-500 mb-1">Sat</div>
            {{/if}}
            
            <div class="w-10 h-24 bg-gray-100 rounded-lg relative overflow-hidden">
              <div class="absolute bottom-0 w-full bg-indigo-500 rounded-b-lg" style="height: {{this}}%;"></div>
              <div class="absolute bottom-2 left-0 right-0 text-xs text-white font-medium">{{this}}%</div>
            </div>
          </div>
        {{/each}}
      </div>
      
      {{#if streak}}
        <div class="flex items-center justify-between bg-gradient-to-r from-indigo-50 to-purple-50 p-3 rounded-lg">
          <div class="text-sm">
            <span class="text-gray-600">You're on a {{streak}} day streak! Keep going!</span>
          </div>
          <a href="/statistics" class="text-xs px-3 py-1.5 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">See your stats</a>
        </div>
      {{/if}}
    </div>
  </div>
</div>

<script>
  // client‑side date injection
  const dateEl = document.getElementById('date');
  if (dateEl) {
    const d = new Date();
    const days = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
    dateEl.textContent = `${days[d.getDay()]}, ${
      d.toLocaleString('default',{ month:'long' })
    } ${d.getDate()}, ${d.getFullYear()}`;
  }
</script>
