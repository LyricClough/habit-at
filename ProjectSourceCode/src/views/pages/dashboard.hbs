<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Habit-@</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body style="padding: 10px;">
  
  <!--Welcome back!-->
  <h3 class="border border-3 rounded-1 shadow p-3 mb-5 bg-body-tertiary rounded" style="width: fit-content; padding: 5px;">
    {{#if user}}
    Welcome back {{user}}!
    {{else}}
    Welcome back, User!
    {{/if}}
    <br>
    <small id="date" class="text-body-secondary">Current Date</small>
    
    <!--Javascript to print the current date-->
    <script>
    var today = new Date();
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
    var yyyy = today.getFullYear();

    today = mm + '/' + dd + '/' + yyyy;
    document.getElementById('date').innerHTML = (today);
    </script>
  </h3>

  <!--List of Habits-->
  <h4 class="">
    Today's Habits
  </h4>
  <table class="table table-striped table-hover">
    <tr>
      <th>
        Habit
      </th>
      <th>
        Status
      </th>
    </tr>
    <tr>
      <td>
        <input type="checkbox" id="habit">
        Smoke a Cigarette
      </td>
      <td>Incomplete</td>
    </tr>
    <tr>
      <td>
        <input type="checkbox" id="habit">
        Brush Teeth
      </td>
      <td>Incomplete</td>
    </tr>
  </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
