<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

<div class="row justify-content-center">
    <div class="col-8">
        <div class="container-md container-fluid py-4 h-100">
            <div id="calendar" class="row h-100">
                
                <!-- Add Habit Button -->
                <button type="button" class="btn btn-primary mt-2 mb-2" data-bs-toggle="modal" data-bs-target="#habit_modal">
                    Add Habit
                </button>

                <!-- Calendar days -->
                <div class="col-sm m-1 bg-light rounded px-1 px-md-2" id="sunday">
                    <div class="h6 text-center position-relative py-2 day">
                        Sunday
                    </div>
                </div>
                <div class="col-sm m-1 bg-light rounded px-1 px-md-2" id="monday">
                    <div class="h6 text-center position-relative py-2 day">
                        Monday
                    </div>
                </div>
                <div class="col-sm m-1 bg-light rounded px-1 px-md-2" id="tuesday">
                    <div class="h6 text-center position-relative py-2 day">
                        Tuesday
                    </div>
                </div>
                <div class="col-sm m-1 bg-light rounded px-1 px-md-2" id="wednesday">
                    <div class="h6 text-center position-relative py-2 day">
                        Wednesday
                    </div>
                </div>
                <div class="col-sm m-1 bg-light rounded px-1 px-md-2" id="thursday">
                    <div class="h6 text-center position-relative py-2 day">
                        Thursday
                    </div>
                </div>
                <div class="col-sm m-1 bg-light rounded px-1 px-md-2" id="friday">
                    <div class="h6 text-center position-relative py-2 day">
                        Friday
                    </div>
                </div>
                <div class="col-sm m-1 bg-light rounded px-1 px-md-2" id="saturday">
                    <div class="h6 text-center position-relative py-2 day">
                        Saturday
                    </div>
                </div>
            </div>        
        </div>
    </div>
</div>

<!-- Modal for creating a habit -->
<div class="modal fade" id="habit_modal" tabindex="-1" aria-labelledby="habitModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="habitModalLabel">Add Habit</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
        <form id="habit_form">
            <!-- Habit Name -->
            <div class="form-group">
            <label for="habit_name">Habit Name</label>
            <input type="text" class="form-control" id="habit_name" placeholder="Enter habit name" required>
            </div>

            <!-- Category Dropdown -->
            <div class="form-group">
            <label for="habit_category">Category</label>
                <select class="form-control" id="habit_category" required>
                <option value="school">School</option>
                <option value="work">Work</option>
                <option value="social">Social</option>
                <option value="personal">Personal</option>
                </select>
            </div>
            
            <!-- Weekday -->
            <div class="form-group">
            <label for="habit_weekday">Weekday</label>
            <select class="form-control" id="habit_weekday" required>
                <option>Monday</option>
                <option>Tuesday</option>
                <option>Wednesday</option>
                <option>Thursday</option>
                <option>Friday</option>
                <option>Saturday</option>
                <option>Sunday</option>
            </select>
            </div>
            
            <!-- Time -->
            <div class="form-group">
            <label for="habit_time">Reminder Time</label>
            <input type="time" class="form-control" id="habit_time" required>
            </div>
        </form>
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="save_habit_btn">Add Habit</button>
        </div>
    </div>
    </div>
</div>

