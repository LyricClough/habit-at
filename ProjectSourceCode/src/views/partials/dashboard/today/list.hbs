{{!--  Habits Due Today  ---------------------------------------------------}}
<div class="flex items-center justify-between">
  <h2 class="text-xl font-semibold mb-4">Habits Completed Today</h2>

  <div class="flex space-x-2">
    <a href="/habits" class="flex items-center text-gray-700 px-3 py-1.5 rounded hover:bg-gray-100">
      View All
    </a>
    <a href="/habits"
       class="flex items-center bg-indigo-600 text-white px-4 py-1.5 rounded-lg hover:bg-indigo-500 shadow-sm">
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Habit
    </a>
  </div>
</div>

  <div class="overflow-hidden bg-white shadow sm:rounded-md">
    <ul class="divide-y divide-gray-200">
      {{#if todayHabits}}
        {{#each todayHabits}}
          <li class="today-habit-item" data-id="{{habit_id}}">
            <div class="flex items-center px-4 py-4 sm:px-6 hover:bg-gray-50">
              <div class="flex min-w-0 flex-1 items-center">
                <div class="flex-shrink-0">
                  <input type="checkbox"
                         class="complete-checkbox h-5 w-5 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600"
                         {{#if doneToday}}checked{{/if}}
                         data-habit-id="{{habit_id}}">
                </div>

                <div class="min-w-0 flex-1 px-4">
                  <p class="truncate text-sm font-medium
                            {{#if doneToday}}line-through text-gray-500{{else}}text-gray-900{{/if}}">
                    {{habit_name}}
                  </p>
                  <p class="mt-1 truncate text-sm text-gray-500">{{description}}</p>
                </div>

                <div>
                  <span class="inline-flex rounded-full bg-indigo-100 px-2 py-1 text-xs font-semibold text-indigo-800">
                    {{printTime time_slot}}
                  </span>
                </div>
              </div>

              <div class="ml-5">
                <button class="edit-today-habit-btn p-2 text-gray-400 hover:text-indigo-600"
                        onclick="openHabitDetail('{{habit_id}}')">
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                </button>
              </div>
            </div>
          </li>
        {{/each}}
      {{else}}
        <li>
          <div class="px-4 py-5 text-center text-sm text-gray-500 italic">
            You have no habits due today
          </div>
        </li>
      {{/if}}
    </ul>
  </div>
</div>
